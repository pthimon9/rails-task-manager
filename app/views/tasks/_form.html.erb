
<%= form_for @task do |f| %>
  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="details">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>


