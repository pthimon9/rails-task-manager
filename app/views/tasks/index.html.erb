<h1>Tasks list</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task[:id]) %>
      <%= link_to 'trash', task_path(task[:id]),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'add a new task', new_task_path %>
